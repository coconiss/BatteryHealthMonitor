<!-- res/layout/item_charging_session.xml -->
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                tools:src="@android:drawable/checkbox_on_background"
                tools:tint="@color/health_good" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                tools:text="2026년 1월 28일 14:30" />

            <TextView
                android:id="@+id/durationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp"
                tools:text="1시간 45분" />

        </LinearLayout>

        <!-- Battery Change -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="충전량"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary" />

            <TextView
                android:id="@+id/batteryChangeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="45% → 100% (+55%)" />

        </LinearLayout>

        <!-- Estimated Capacity -->
        <LinearLayout
            android:id="@+id/capacityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="추정 용량"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary" />

            <TextView
                android:id="@+id/estimatedCapacityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="3850 mAh" />

        </LinearLayout>

        <!-- Temperature -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="평균 온도"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary" />

            <TextView
                android:id="@+id/temperatureText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="32.5°C" />

        </LinearLayout>

        <!-- Charger Type -->
        <LinearLayout
            android:id="@+id/chargerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="충전기"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary" />

            <TextView
                android:id="@+id/chargerTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="AC (급속충전)" />

        </LinearLayout>

        <!-- Invalid Reason -->
        <TextView
            android:id="@+id/invalidReasonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="#FFEBEE"
            android:textColor="#C62828"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="무효: 고온 (45.2°C)" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>